<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-leathers_colors_images-table.1" author="AABelimov">
        <preConditions>
            <not>
                <tableExists tableName="leathers_colors_images"/>
            </not>
        </preConditions>

        <createTable tableName="leathers_colors_images">
            <column name="leather_color_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="image_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="leathers_colors_images" baseColumnNames="leather_color_id"
                                 constraintName="fk_leathers_colors_images_leather_color_id"
                                 referencedTableName="leathers_colors"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="leathers_colors_images" baseColumnNames="image_id"
                                 constraintName="fk_leathers_colors_images_image_id"
                                 referencedTableName="images"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>