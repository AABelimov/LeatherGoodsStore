<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-orders_products-table.1" author="AABelimov">
        <preConditions>
            <not>
                <tableExists tableName="orders_products"/>
            </not>
        </preConditions>

        <createTable tableName="orders_products">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="order_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="product_leather_color_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="orders_products" baseColumnNames="order_id"
                                 constraintName="fk_orders_products_order_id"
                                 referencedTableName="orders"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="orders_products" baseColumnNames="product_leather_color_id"
                                 constraintName="fk_orders_products_product_leather_color_id"
                                 referencedTableName="products_leather_colors"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>