<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-leathers_images-table.1" author="AABelimov">
        <preConditions>
            <not>
                <tableExists tableName="leathers_images"/>
            </not>
        </preConditions>

        <createTable tableName="leathers_images">
            <column name="leather_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="image_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="leathers_images" baseColumnNames="leather_id"
                                 constraintName="fk_leathers_images_leather_id"
                                 referencedTableName="leathers"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="leathers_images" baseColumnNames="image_id"
                                 constraintName="fk_leather_images_image_id"
                                 referencedTableName="images"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>